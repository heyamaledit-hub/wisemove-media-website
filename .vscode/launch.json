{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start local server"
        },
        {
            "name": "Open index.html (no server)",
            "type": "chrome",
            "request": "launch",
            "url": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        }
    ]
}