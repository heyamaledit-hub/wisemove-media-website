{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start local server",
            "type": "shell",
            "command": "npx",
            "args": ["--yes", "serve", ".", "-l", "8080"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {}
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "server",
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:"
                }
            },
            "presentation": { "reveal": "silent", "panel": "shared" }
        }
    ]
}
